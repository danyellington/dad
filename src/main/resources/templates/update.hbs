            <input id="profilePic" name="profilePic" type="text" placeholder="add picture URL" value="apple">
            <br>
            <label for="userTagLine">Tag Line:</label>
            <input id="userTagLine" name="userTagLine" type="text" placeholder="Describe yourself" value="{{user.userTagLine}}">
            <br>
            <label for="birthday">Birthday:</label>
            <input id="birthday" name="birthday" type="date" value="">
            <br>

