{{#partial "content"}}

    <h2>YOUR MATCHES</h2>
    <p>People that like you back: {{size}}</p>
    {{#if matches}}
        {{#each matches}}
<div class="profileMatch">
            <br>
            <h3>{{realName}}</h3>
            <br>
            <img class="profilePicSmall" src="{{profilePic}}">
            <p>{{userTagLine}}</p>
            <p>Is a: {{cGender}}</p>
            <p>Looking for: {{cPreferredGender}}</p>
            <p>{{age}}</p>
            <p>{{location}}</p>
            <p>{{sign}}</p>
            <p>{{job}}</p>
            <p>{{kids}}</p>
            <p>{{email}}</p>
            <p>{{phone}}</p>
    <form class="match" action="/profile/{{our_user.id}}/search/{{id}}" method="get">
    <input id="accountButton" type="submit" value="View Profile">
</div>
        {{/each}}
    {{else}}
        <p>no one likes you</p>
    {{/if}}

{{/partial}}
{{> layout.hbs}}